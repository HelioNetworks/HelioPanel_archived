{% extends '::heliopanel.html.twig' %}

{% block content %}
    <form method=post action="#" {{ form_enctype(form) }} id="file_edit">

        {{ form_widget(form.source, { 'id':'file_name' }) }}
        {{ form_widget(form.data, { 'id':'file_data' }) }}

        <div id="editor"></div>
        <div id="spacer"></div>

        <input type="submit" />

    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% for script in editor.assets %}
        <script defer src="{{ asset(script) }}" type="text/javascript"></script>
    {% endfor %}
{% endblock %}
