{% extends '::heliopanel.html.twig' %}

{% block content %}
		<table class="filestoolbar"><tr>
			<td width=40 valign=middle>
				<a class="modal-form" href="#" current-file="{{ path }}" form-src="/file/create">
					<img class="file-edit-link" border=0 src="/images/files/addfile.png">
				</a>
			</td>
			<td width=40 valign=middle>
				<a class="modal-form" href="#" current-file="{{ path }}" form-src="/directory/create">
					<img class="file-edit-link" border=0 src="/images/files/addfolder.png">
				</a>
			</td>
			<td width=40 valign=middle><img border=0 src="/images/files/upload.png" style="cursor:pointer; opacity:0.5;filter:alpha(opacity=50)" onmouseover="this.style.opacity=1;this.filters.alpha.opacity=100" onmouseout="this.style.opacity=0.5;this.filters.alpha.opacity=50" onClick="window.location=\'files/uploadfile.php?path=<?php echo $path; ?>\'"></td>
			<td valign=middle><form method=get action=#><font size=1><br></font><input type=text name=path value="{{ path }}"><input type=submit></form></td>
		</tr></table>

		<table width="100%">

		<tr>
			<td align=left width=40></td>
			<td align=left><font face="Trebuchet MS" size=2><b>File Name</b></font></td>
			<td align=left width=40><center><font face="Trebuchet MS" size=2><b>Edit Code</b></font></center></td>
			<td align=left width=40><center><font face="Trebuchet MS" size=2><b>WYSIWYG</b></font></center></td>
			<td align=left width=40><center><font face="Trebuchet MS" size=2><b>Rename</b></font></center></td>
			<td align=left width=40><center><font face="Trebuchet MS" size=2><b>Copy</b></font></center></td>
			<td align=left width=40><center><font face="Trebuchet MS" size=2><b>Delete</b></font></center></td>
			<td align=left width=40><center><font face="Trebuchet MS" size=2><b>Extract</b></font></center></td>
		</tr>
	{% for file in files %}

		<tr>
	         		<td align=left width=40>
	         			<img src="/images/files/{{ file.type }}.png">
         			</td>
	         		<td align=left>
	         			<a href="/directory/list?path={{ file.path }}/"/>
	         				<font face=Verdana color=black>{{ file.name }}</font>
         				</a>
         			</td>
	         		<td align=left width=40>
	         			<a href="/file/edit?path={{ file.path }}">
	         				<img class="file-edit-link" src="/images/files/edit{{ file.type }}.png">
         				</a>
         			</td>
	         		<td align=left width=40>
	         			<a href=files.php?r=wysiwyg&file='.$path.''.$file.'>
	         				<img class="file-edit-link" src="/images/files/wysiwyg{{ file.type }}.png" />
         				</a>
         			</td>
					<td align=left width=40>
						<a class="modal-form" href="#" current-file="{{ file.path }}" form-src="/file/rename">
							<img class="file-edit-link" src=/images/files/rename.png />
						</a>
					</td>
					<td align=left width=40>
						<a href="">
							<img class="file-edit-link" src=/images/files/copy.png>
						</a>
					</td>
	         		<td align=left width=40>
						<a class="modal-form" href="#" current-file="{{ file.path }}" form-src="/file/delete">
	         				<img class="file-edit-link" src=/images/files/deletefile.png >
         				</a>
         			</td>
	         		<td align=left width=40>
	         			<a href="">
	         				<img class="file-edit-link" src=/images/files/extract.png>
         				</a>
         			</td>
         </tr>

	{% endfor %}

	</table>

	<div id="dialog-box"></div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('/bundles/helionetworksfilemanager/directorylist.js') }}"></script>
{% endblock %}