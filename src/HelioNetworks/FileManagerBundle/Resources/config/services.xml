<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	
	<services>
        <service id="helio_networks_file_manager.adapter.filesystem.local" class="Gaufrette\Filesystem\Adapter\Local" />
        <service id="helio_networks_file_manager.adapter.filesystem.ftp"   class="Gaufrette\Filesystem\Adapter\Ftp" />
	
        <service id="helio_networks_file_manager.filesystem.ftp" class="Gaufrette\Filesystem\Filesystem" >
       		<argument type="service" id="helio_networks_file_manager.adapter.filesystem.ftp" />
        </service>

        <service id="helio_networks_file_manager.filesystem.local" class="Gaufrette\Filesystem\Filesystem">
            <argument type="service" id="helio_networks_file_manager.adapter.filesystem.local" />
        </service>
	</services>
	
</container>