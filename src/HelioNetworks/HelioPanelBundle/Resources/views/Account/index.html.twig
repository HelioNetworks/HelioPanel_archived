{% extends '::heliopanel.html.twig' %}

{% block container %}
	<h1>Account list</h1>

	<table class="records_list">
	    <thead>
	        <tr>
	            <th>Id</th>
	            <th>Username</th>
	            <th>Password</th>
	            <th>Actions</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td>{{ entity.username }}</td>
	            <td>
	                <ul>
	                    <li>
	                        <a href="{{ path('account_delete', { 'id': entity.id }) }}">delete</a>
	                    </li>
	                </ul>
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>

	<ul>
	    <li>
	        <a href="{{ path('account_add') }}">
	            Add an acccount.
	        </a>
	    </li>
	</ul>
{% endblock %}
